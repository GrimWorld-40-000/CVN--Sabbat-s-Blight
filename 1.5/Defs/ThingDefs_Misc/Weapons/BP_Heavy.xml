<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>GW_BP_MissileLauncher</defName>
		<label>Pact Missile Launcher</label>
		<description>A standard Astra Millitarum missile launcher, covered in red markings by its new owners.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/BP_Rocketlaucher</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.4</drawSize>
		</graphicData>
		<soundInteract>Interact_ChargeRifle</soundInteract>
		<recipeMaker>
			<researchPrerequisites>
			 <li>CVN_ImperialWeaponsHeavy</li>
			 <li>CVN_BloodpactBasic</li>
			</researchPrerequisites>
			<recipeUsers Inherit="False">
				<li>CVN_BP_FabricationBench</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<displayPriority>235</displayPriority>
		</recipeMaker>
		<costList>
			<Steel>150</Steel>
			<ComponentIndustrial>10</ComponentIndustrial>
			<Chemfuel>100</Chemfuel>
		</costList>
		<equippedStatOffsets>
            <MoveSpeed>-0.50</MoveSpeed>
		</equippedStatOffsets>
	    <equippedAngleOffset>45</equippedAngleOffset>
		<weaponTags>
         <li>BPranged3</li>
        </weaponTags>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>GW_BP_Projectile_Missile</defaultProjectile>
				<warmupTime>4</warmupTime>
				<range>36</range>
				<forcedMissRadius>1</forcedMissRadius>
				<burstShotCount>1</burstShotCount>
				<soundCast>InfernoCannon_Fire</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<muzzleFlashScale>14</muzzleFlashScale>
			</li>
		</verbs>
		<statBases>
			<WorkToMake>35000</WorkToMake>
            <Mass>11.5</Mass>
            <AccuracyTouch>0.55</AccuracyTouch>
            <AccuracyShort>0.70</AccuracyShort>
            <AccuracyMedium>0.80</AccuracyMedium>
            <AccuracyLong>0.80</AccuracyLong>
            <RangedWeapon_Cooldown>5</RangedWeapon_Cooldown>
		</statBases>
		<tools>
            <li>
                <label>barrel</label>
                <capacities>
					<li>Blunt</li>
                </capacities>
				<power>12</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
	</ThingDef>
	
	<ThingDef ParentName="BaseBullet">
		<defName>GW_BP_Projectile_Missile</defName>
		<label>missile</label>
		<graphicData>
			<texPath>Things/Projectile/Rocket_Big</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<thingClass>Projectile_Explosive</thingClass>
		<projectile>
			<damageDef>Bomb</damageDef>
			<explosionRadius>2.9</explosionRadius>
			<speed>75</speed>
		</projectile>
	</ThingDef>
		
