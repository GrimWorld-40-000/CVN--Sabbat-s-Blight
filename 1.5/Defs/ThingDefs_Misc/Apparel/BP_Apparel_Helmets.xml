<Defs>

    <ThingDef ParentName="CVN_BP_ArmorBase">
        <defName>BP_Flakhelm</defName>
        <label>Pact Flak Helmet</label>
        <description>A stolen flak helmet, either taken during desertion or looted from an armory. Repainted in the traditional Pact colors</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/CorruptedCadian/Headgear/BP_CadianHelmet_south</texPath>
        </graphicData>
        <costList>
            <Steel>20</Steel>
			<HP_Ceramite>5</HP_Ceramite>
			<ComponentIndustrial>1</ComponentIndustrial>
        </costList>	
        <statBases>
            <WorkToMake>3000</WorkToMake>
            <MaxHitPoints>250</MaxHitPoints>
            <Mass>2</Mass>
            <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
            <ArmorRating_Heat>0.50</ArmorRating_Heat>
            <Insulation_Cold>2</Insulation_Cold>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <recipeMaker>
            <researchPrerequisites>
			 <li>GW_BP_Plunder</li>
			</researchPrerequisites>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
			<displayPriority>415</displayPriority>
        </recipeMaker>
        <apparel>
            <wornGraphicPath>Things/Pawn/Humanlike/Apparel/CorruptedCadian/Headgear/BP_CadianHelmet</wornGraphicPath>
		    <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
        </apparel>
    </ThingDef>
	
