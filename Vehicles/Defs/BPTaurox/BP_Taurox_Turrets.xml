<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<Vehicles.VehicleTurretDef ParentName="VehicleTurretBase">
		<defName>GW_BP_Vehicle_HeavyStubber</defName>
		<label>Heavy Stubber</label>
		<description>A machine gun favored by gangers, insurgents, and lower-tech Planetary Defense Forces. They are better at crowd control than the LMGs of modern rimworlds, as they fire longer and more powerful bursts. \n\nThis pintle-mounted weapon serves as the Taurox's only offensive armament, providing fire support for its transported infantry.</description>
		<turretType>Rotatable</turretType>
		<shotSound>Shot_Autocannon</shotSound>
		<projectile>GW_Bullet_HeavyStubber</projectile>
		<reloadTimer>5.0</reloadTimer>
		<warmUpTimer>1.0</warmUpTimer>
		<magazineCapacity>100</magazineCapacity>
		<chargePerAmmoCount>1</chargePerAmmoCount>
		<genericAmmo>true</genericAmmo>
		<!-- <hitFlags>IntendedTarget</hitFlags> -->
		<autoSnapTargeting>false</autoSnapTargeting>
		<rotationSpeed>2.0</rotationSpeed>
		<projectileOffset>1.5</projectileOffset>
		<maxRange>31.9</maxRange>
		<attachProjectileFlag>GW_Tank</attachProjectileFlag>
		<fireModes>
			<li>
				<shotsPerBurst>1</shotsPerBurst>
				<ticksBetweenShots>12</ticksBetweenShots>
				<ticksBetweenBursts>12</ticksBetweenBursts>
				<label>Single</label>
				<texPath>UI/Gizmos/FireRate_Single</texPath>
			</li>
			<li>
				<shotsPerBurst>4</shotsPerBurst>
				<ticksBetweenShots>12</ticksBetweenShots>
				<ticksBetweenBursts>25</ticksBetweenBursts>
				<label>Burst</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>
			</li>
			<li>
				<shotsPerBurst>10</shotsPerBurst>
				<ticksBetweenShots>12</ticksBetweenShots>
				<ticksBetweenBursts>25</ticksBetweenBursts>
				<label>Auto</label>
				<texPath>UI/Gizmos/FireRate_Auto</texPath>
			</li>
		</fireModes>
		<graphicData>
			<texPath>Things/Vehicles/BPTaurox/Turret/BP_HeavyStubber</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(2.5, 2.5)</drawSize>
		</graphicData>
		<ammunition>
			<thingDefs>
				<li>GW_HeavyBolterNonCE</li>
			</thingDefs>
		</ammunition>
	</Vehicles.VehicleTurretDef>
</Defs>
